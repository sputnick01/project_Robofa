<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <android.support.v7.widget.Toolbar
                android:id="@+id/MainPage_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#22a6ef"
                android:elevation="20dp"
                android:minHeight="?attr/actionBarSize">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--#f8960a-->
                    <!--<ImageView-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:adjustViewBounds="true"-->
                    <!--android:id="@+id/MainPage_Home_IconToolbar"-->
                    <!--android:layout_alignParentLeft="true"-->
                    <!--android:src="@drawable/icon_home"-->
                    <!--android:scaleType="centerInside"-->
                    <!--/>-->
                    <TextView
                        android:id="@+id/MainPage_Home_toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="ثبت نام معلم"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

    </android.support.design.widget.CoordinatorLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/TeacherRelativeLayout211"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#22a5ee">

                <TextView
                    android:id="@+id/Form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="فرم ثبت نام" />
            </RelativeLayout>


            <com.weiwangcn.betterspinner.library.BetterSpinner
                android:id="@+id/BTeacherschool_Ducument"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/backedittext"
                android:text="کلاس درس "
                android:textColor="@color/TextColor"
                android:textColorHint="@color/Yellow"
                android:textSize="12sp"
                android:visibility="gone" />

            <com.weiwangcn.betterspinner.library.BetterSpinner
                android:id="@+id/BTeacherschool_School"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/backedittext"
                android:text="مدرسه"
                android:textColor="@color/TextColor"
                android:textColorHint="@color/Yellow"
                android:textSize="12sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/BTeacherschool_EditText_Name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/back_setting2"
                android:hint="نام "
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="16dp"
                android:visibility="gone"
                />

            <EditText
                android:id="@+id/BTeacherschool_EditText_LastName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/back_setting2"
                android:hint="نام خانوادگی "
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="16dp"
                android:visibility="gone" />

            <com.weiwangcn.betterspinner.library.BetterSpinner
                android:id="@+id/BTeacherschool_EditText_KindClass"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/backedittext"
                android:text="نوع کلاس "
                android:textColor="@color/TextColor"
                android:textColorHint="@color/Yellow"
                android:textSize="12sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/BTeacherschool_EditText_School"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/back_setting2"
                android:hint="مدرسه"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="16dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/BTeacherschool_EditText_Breth"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/back_setting2"
                android:hint="تاریخ تولد"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="16dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/BTeacherschool_EditText_MaliKey"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/back_setting2"
                android:hint="کد ملی"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="16dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/BTeacherschool_EditText_PhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/back_setting2"
                android:hint="شماره تلفن"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="16dp"
                android:visibility="gone" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/BTeacherschool_Profile_CircularImageView"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/girl"
                app:civ_border_color="#172938"
                app:civ_border_width="2dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#192d3c"
                app:civ_shadow_radius="10" />
            <!--دکمه ورود-->
            <Button
                android:id="@+id/BTeacherschool_ButtonSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/TextColor"
                android:textSize="12dp"
                android:text="ثبت نام"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
