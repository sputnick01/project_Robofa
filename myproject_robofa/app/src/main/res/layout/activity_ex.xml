<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ex"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.farshid.myproject_robofa.ex"
    android:orientation="vertical">
<EditText
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/Class"
    android:hint="کلاس"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/Term"
        android:hint="ترم"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/Note"
        android:hint="نوت"
        />
    <Button
        android:layout_width="match_parent"
        android:text="oK"
        android:id="@+id/ok"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:text="oK2"
        android:id="@+id/ok2"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:text="text"
        android:id="@+id/textok2"
        android:layout_height="match_parent" />
</LinearLayout>
