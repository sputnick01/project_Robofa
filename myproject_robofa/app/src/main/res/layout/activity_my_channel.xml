<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_channel"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context="com.example.farshid.myproject_robofa.MainPage.Channel.MyChannel"
    android:orientation="vertical">
    <android.support.design.widget.TabLayout
        android:id="@+id/MainPageNav_TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary2"
        android:padding="10dp"
        app:tabGravity="fill"
        app:tabIndicatorColor="#ff0000"
        app:tabMode="fixed"
        app:tabTextColor="#fff200" />

    <android.support.v4.view.ViewPager
        android:id="@+id/MainPageNav_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>
