<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/CardViewRe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--اطلاعات خانه-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <!--نام و نام خانوادگی-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/RecyclerSearch_TaxtNamePerson2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="علی فرجی"
                            android:textColor="@color/Backgrand_Edittext"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/RecyclerSearch_TaxtNamePerson1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="نام ونام خانوادگی :"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="13sp" />

                    </LinearLayout>
                    <!--شماره تلفن-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/RecyclerSearch_PhoneNumber2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="09357132959"
                            android:textColor="@color/Backgrand_Edittext"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/RecyclerSearch_PhoneNumber1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="شماره تماس :"
                            android:textColor="#000"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <!--کد ملی-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/RecyclerSearch_NationalCode2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="166035813"
                            android:textColor="@color/Backgrand_Edittext"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/RecyclerSearch_NationalCode1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="کد ملی :"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/RecyclerSearch_ImageStudent"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/girl"
                        app:civ_border_color="#172938"
                        app:civ_border_width="2dp"
                        app:civ_shadow="true"
                        app:civ_shadow_color="#192d3c"
                        app:civ_shadow_radius="10" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>