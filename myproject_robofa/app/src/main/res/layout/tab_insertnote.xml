<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_ex"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <com.weiwangcn.betterspinner.library.BetterSpinner
            android:id="@+id/Class"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backedittext"
            android:text="رشته"
            android:textColor="@color/TextColor"
            android:textColorHint="@color/Yellow"
            android:textSize="14sp" />

        <com.weiwangcn.betterspinner.library.BetterSpinner
            android:id="@+id/School_Base"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backedittext"
            android:text="پایه"
            android:textColor="@color/TextColor"
            android:textColorHint="@color/Yellow"
            android:textSize="14sp" />
        <com.weiwangcn.betterspinner.library.BetterSpinner
            android:id="@+id/School_Lessen"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backedittext"
            android:text="درس"
            android:textColor="@color/TextColor"
            android:textColorHint="@color/Yellow"
            android:textSize="14sp" />

        <com.weiwangcn.betterspinner.library.BetterSpinner
            android:id="@+id/Term"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backedittext"
            android:text="ترم"
            android:textColor="@color/TextColor"
            android:textColorHint="@color/Yellow"
            android:textSize="14sp" />
        <com.weiwangcn.betterspinner.library.BetterSpinner
            android:id="@+id/TypeClass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backedittext"
            android:text="نوع کلاس"
            android:textColor="@color/TextColor"
            android:textColorHint="@color/Yellow"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/Note"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/back_setting2"
            android:padding="10dp"
            android:hint="درج یادداشت"
            android:gravity="top"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="16dp"

            />

        <Button
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/TextColor"
            android:textSize="12dp"
            android:background="@drawable/backedittext"
            android:text="ثبت یادداشت"
            />


    </LinearLayout>
</LinearLayout>
