<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Camera_ImageView_AddImage"
                android:layout_width="200dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_gallary"
                />


            <EditText
                android:id="@+id/Camera_EditText_InsertTopic"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/backedittext_camera"
                android:gravity="top"
                android:hint="موضوع"
                android:padding="10dp"
                android:textColor="@color/White"
                android:textColorHint="@color/White"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/Camera_EditText_InsertSender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/backedittext_camera"
                android:gravity="top"
                android:hint="فرستنده"
                android:padding="10dp"
                android:textColor="@color/White"
                android:textColorHint="@color/White"
                android:textSize="16dp" />

            <Button
                android:id="@+id/Camera_Button_AddImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/backbutton_chanageimage"
                android:text="اضافه کردن پست"
                android:textColor="@color/White" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>